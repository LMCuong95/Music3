<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_marginBottom="0dp"
        android:gravity="fill"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:background="#d67c7c">

        <ImageView
            android:id="@+id/image_album"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/anhtho" />


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/click_tenbaihat"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Ten bai hat"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/click_theloai"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Ten bai hat"
                android:textSize="20sp" />

        </LinearLayout>


        <Button
            android:id="@+id/click_start"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            android:background="@drawable/slector_push" />

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bkav.demo.music.MainActivity">


   <include
       android:id="@+id/toolbar"
       layout="@layout/layout_toolbar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />


   <ListView
       android:id="@+id/list_album"
       android:layout_width="match_parent"
       android:layout_height="430dp"
       android:layout_below="@id/toolbar">

   </ListView>

   <LinearLayout

       android:layout_marginBottom="0dp"
       android:gravity="fill"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignEnd="@id/list_album"
       android:layout_below="@id/list_album"
       android:background="#d67c7c">

      <ImageView
          android:id="@+id/image_album"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:background="@drawable/anhtho" />


      <LinearLayout
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginLeft="10dp"
          android:orientation="vertical">

         <TextView
             android:id="@+id/click_tenbaihat"
             android:layout_width="180dp"
             android:layout_height="wrap_content"
             android:text="Ten bai hat"
             android:textSize="30sp" />

         <TextView
             android:id="@+id/click_theloai"
             android:layout_width="180dp"
             android:layout_height="wrap_content"
             android:text="Ten bai hat"
             android:textSize="20sp" />

      </LinearLayout>


      <Button
          android:id="@+id/click_start"
          android:layout_width="80dp"
          android:layout_height="60dp"
          android:layout_gravity="right"
          android:layout_marginRight="2dp"
          android:background="@drawable/slector_push" />

   </LinearLayout>


</RelativeLayout>

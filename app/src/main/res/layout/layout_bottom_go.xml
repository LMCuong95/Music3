<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="bottom"
    android:background="#EEEEEE"
    android:orientation="vertical"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="3:28"
            android:textSize="20dp" />

        <TextView

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:text="3:28"
            android:textSize="20dp" />

    </RelativeLayout>


    <LinearLayout
       android:layout_marginLeft="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="15">

        <ImageView

            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"
            android:layout_weight="2"
            android:background="@drawable/ic_thumbs_up_default" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"
            android:layout_weight="2"
            android:background="@drawable/ic_rew_dark_translucent" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"
            android:layout_weight="2"
            android:background="@drawable/ic_fab_play_btn_normal" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"
            android:layout_weight="2"
            android:background="@drawable/ic_fwd_dark_translucent" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"
            android:layout_weight="2"
            android:background="@drawable/ic_thumbs_down_default" />


    </LinearLayout>


</LinearLayout>